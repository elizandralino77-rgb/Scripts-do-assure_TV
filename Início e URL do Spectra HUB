-- Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")
local SoundService = game:GetService("SoundService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Criando ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AssureTVSplash"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- Criando efeito de blur no fundo
local blur = Instance.new("BlurEffect")
blur.Size = 0
blur.Parent = Lighting
local blurTween = TweenService:Create(blur, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {Size = 24})
blurTween:Play()

-- Criando Frame principal (quadrado preto com borda branca)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 150)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, -40)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 3
uiStroke.Color = Color3.fromRGB(255, 255, 255)
uiStroke.Parent = mainFrame

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 15)
uiCorner.Parent = mainFrame

-- Texto principal (Spectra HUB)
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, -20, 0.6, 0)
titleLabel.Position = UDim2.new(0, 10, 0, 10)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Spectra HUB"
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBlack
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextStrokeTransparency = 0.7
titleLabel.Parent = mainFrame
titleLabel.TextWrapped = true

-- Texto secundário rainbow
local subLabel = Instance.new("TextLabel")
subLabel.Size = UDim2.new(1, -20, 0.3, 0)
subLabel.Position = UDim2.new(0, 10, 0.65, 0)
subLabel.BackgroundTransparency = 1
subLabel.Text = "esse script foi feito por assure_TV"
subLabel.TextScaled = true
subLabel.Font = Enum.Font.Gotham
subLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
subLabel.TextStrokeTransparency = 0.8
subLabel.Parent = mainFrame
subLabel.TextWrapped = true

-- Barra de progresso embaixo do quadrado
local progressBackground = Instance.new("Frame")
progressBackground.Size = UDim2.new(0, 400, 0, 15)
progressBackground.Position = UDim2.new(0.5, 0, 0.5, 90)
progressBackground.AnchorPoint = Vector2.new(0.5, 0)
progressBackground.BackgroundColor3 = Color3.fromRGB(50,50,50)
progressBackground.BorderSizePixel = 0
progressBackground.Parent = screenGui

local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.Position = UDim2.new(0,0,0,0)
progressBar.BackgroundColor3 = Color3.fromRGB(0,255,128)
progressBar.BorderSizePixel = 0
progressBar.Parent = progressBackground

local progressCorner = Instance.new("UICorner")
progressCorner.CornerRadius = UDim.new(0,7)
progressCorner.Parent = progressBar

local progressBgCorner = Instance.new("UICorner")
progressBgCorner.CornerRadius = UDim.new(0,7)
progressBgCorner.Parent = progressBackground

-- Tween da barra
local tweenInfo = TweenInfo.new(5, Enum.EasingStyle.Linear)
local tweenGoal = {Size = UDim2.new(1,0,1,0)}
local tween = TweenService:Create(progressBar, tweenInfo, tweenGoal)
tween:Play()

-- Rainbow do texto secundário
local hue = 0
local rainbowConnection
rainbowConnection = RunService.RenderStepped:Connect(function(delta)
    hue = (hue + delta*0.3) % 1
    subLabel.TextColor3 = Color3.fromHSV(hue, 1, 1)
end)

-- Criando som que começa no segundo 8 e toca imediatamente
local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://118507373399694"
sound.TimePosition = 15 -- inicia no segundo 8 da música
sound.Parent = SoundService
sound:Play() -- toca imediatamente

-- Finalizar GUI após 5 segundos
delay(5, function()
    rainbowConnection:Disconnect()
    screenGui:Destroy()
    
    -- Para o som
    sound:Stop()
    
    -- Remove blur
    local blurTweenOut = TweenService:Create(blur, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {Size = 0})
    blurTweenOut:Play()
    blurTweenOut.Completed:Connect(function()
        blur:Destroy()
    end)
    
    -- Executa seu script
    loadstring(game:HttpGet((function(e)local b='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/'e=e:gsub("[^"..b.."=]","")return(e:gsub(".",function(x)if x=="="then return""end local r,f="",(b:find(x)-1)for i=6,1,-1 do r=r..(f%2^i-f%2^(i-1)>0 and"1"or"0")end return r end):gsub("%d%d%d?%d?%d?%d?%d?%d?",function(x)if#x~=8 then return""end local c=0 for i=1,8 do c=c+(x:sub(i,i)=="1"and 2^(8-i)or 0)end return string.char(c)end))end)("aHR0cHM6Ly9yYXcuZ2l0aHVidXNlcmNvbnRlbnQuY29tL2VsaXphbmRyYWxpbm83Ny1yZ2IvU2NyaXB0cy1kby1hc3N1cmVfVFYvcmVmcy9oZWFkcy9tYWluL1NwZWN0cmElMjBIVUIlMjBWMg==")))()
end)
