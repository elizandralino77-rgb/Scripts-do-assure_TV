-- Coordenadas de todos os locais
local locais = {
    ["Cemitério"] = Vector3.new(-467, 2, 53),
    ["Tóxico"] = Vector3.new(561, 1, 387),
    ["Lobby"] = Vector3.new(-27, 2, -9),
    ["Praia"] = Vector3.new(-212, 1, 686),
    ["Fazenda"] = Vector3.new(-839, 3, -285),
    ["Monte Everest"] = Vector3.new(-667, 251, 760),
    ["Posto de gasosa"] = Vector3.new(82, 3, -298),
    ["Nada"] = Vector3.new(-1379, 76, -1352),
    ["Limbo"] = Vector3.new(204, -400, -80)
}

-- Variável para armazenar a escolha
local chosenLocation = nil

-- Dropdown para escolher local
TeleportTab:AddDropdown({
    Name = "Escolher Local",
    Default = "Escolher Local",
    Options = {"Cemitério", "Tóxico", "Lobby", "Praia", "Fazenda", "Monte Everest", "Posto de gasosa", "Nada", "Limbo"},
    Callback = function(value)
        chosenLocation = value
    end
})

-- Botão de teleportar
TeleportTab:AddButton({
    Name = "Teleportar",
    Callback = function()
        if chosenLocation and locais[chosenLocation] then
            local player = game.Players.LocalPlayer
            local char = player.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                char.HumanoidRootPart.CFrame = CFrame.new(locais[chosenLocation])
            end
        else
            warn("Escolha um local antes de teleportar!")
        end
    end
})


----------------------------------------------------------
-- ABA MAPA
----------------------------------------------------------
local MapTab = Window:MakeTab({
    Name = "Mapa",
    Icon = "rbxassetid://12755989530"
})

----------------------------------------------------------
-- FUNÇÃO AUXILIAR: Spawnar modelo com imagem e som
----------------------------------------------------------
local function spawnModelWithEffect(modelId, imageId, audioId, offsetVector, teleportToModel, effectTime)
    effectTime = effectTime or 1

    local char = plr.Character or plr.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")
    local playerGui = plr:WaitForChild("PlayerGui")
    local Workspace = game:GetService("Workspace")

    -- posição de spawn
    local spawnPos = hrp.Position + hrp.CFrame.LookVector * 5
    if offsetVector then spawnPos = spawnPos + offsetVector end

    -- carregar modelo
    local model = game:GetObjects("rbxassetid://" .. modelId)[1]
    if not model then
        warn("Não foi possível carregar o modelo: " .. modelId)
        return
    end
    model.Parent = Workspace

    -- mover modelo para spawnPos
    local primary = model.PrimaryPart or model:FindFirstChildWhichIsA("BasePart")
    if primary then
        local offset = spawnPos - primary.Position
        for _, part in ipairs(model:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CFrame = part.CFrame + offset
            end
        end

        if teleportToModel then
            hrp.CFrame = primary.CFrame + Vector3.new(0, 5, 0)
        end
    end

    -- criar GUI com imagem
    if imageId then
        local gui = Instance.new("ScreenGui")
        gui.Name = "SpawnEffectGui"
        gui.ResetOnSpawn = false
        gui.Parent = playerGui

        local img = Instance.new("ImageLabel")
        img.Parent = gui
        img.BackgroundTransparency = 1
        img.Image = "rbxassetid://" .. imageId
        img.AnchorPoint = Vector2.new(0.5, 0.5)
        img.Position = UDim2.new(0.5, 0, 0.5, 0)
        img.Size = UDim2.new(0, 900, 0, 900)

        task.spawn(function()
            local startTime = tick()
            while tick() - startTime < effectTime do
                local t = (tick() - startTime) / effectTime
                img.Size = UDim2.new(0, 900 * (1 - t), 0, 900 * (1 - t))
                task.wait()
            end
            gui:Destroy()
        end)
    end

    -- tocar som
    if audioId then
        local sound = Instance.new("Sound")
        sound.Parent = hrp
        sound.SoundId = "rbxassetid://" .. audioId
        sound.Volume = 10
        sound:Play()
    end
end

