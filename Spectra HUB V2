    Name = "Escolher Item",
    Options = (function()
        local list = {}
        for name, _ in pairs(items) do
            table.insert(list, name)
        end
        return list
    end)(),
    Default = selectedItem,
    Callback = function(option)
        selectedItem = option
    end
})

-- Botão Spawn Item
