-- Fun√ß√£o auxiliar para criar bot√µes
local function AddBodyButton(name, argsTable)
    Aba_R6R15:AddButton({
        Name = name,
        Callback = function()
            pcall(function()
                game:GetService("ReplicatedStorage").Remotes.ChangeCharacterBody:InvokeServer(unpack(argsTable))
            end)
        end
    })
end

