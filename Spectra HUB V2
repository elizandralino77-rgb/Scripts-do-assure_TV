local rgbSpeed = 10
local bioSpeed = 10
local ativo = false

-- Slider velocidade RGB
RGBTab:AddSlider({
    Name = "Velocidade RGB",
    Min = 1,
    Max = 50,
    Default = 10,
    Increment = 1,
    Callback = function(v)
        rgbSpeed = v
    end
})

-- Slider velocidade BIO
RGBTab:AddSlider({
    Name = "Velocidade BIO",
    Min = 1,
    Max = 50,
    Default = 10,
    Increment = 1,
    Callback = function(v)
        bioSpeed = v
    end
})

-- Toggle para ligar/desligar os dois ao mesmo tempo
RGBTab:AddToggle({
    Name = "RGB + BIO ON/OFF",
    Default = false,
    Callback = function(state)
        ativo = state
        local remote = game:GetService("ReplicatedStorage").RE:FindFirstChild("1RPNam1eColo1r")
        if not remote then return end

        if ativo then
            -- Loop RGB do NOME
            task.spawn(function()
                while ativo do
                    for _, color in ipairs(rgbColors) do
                        if not ativo then break end
                        remote:FireServer("PickingRPNameColor", color)
                        task.wait(1 / rgbSpeed)
                    end
                end
            end)

            -- Loop BIO
            task.spawn(function()
                while ativo do
                    for _, color in ipairs(rgbColors) do
                        if not ativo then break end
                        remote:FireServer("PickingRPBioColor", color)
                        task.wait(1 / bioSpeed)
                    end
                end
            end)
        end
    end
})

