-- Fun√ß√£o para pegar o nome do jogador local
local function getPlayerName()
    return Players.LocalPlayer.Name
end

-- Fun√ß√£o para criar bot√£o que dispara evento
local function createToolButton(name)
    LimitedTab:AddButton({
        Name = name,
        Callback = function()
            local args = {
                [1] = "AcceptedToolToServer",
                [2] = name,
                [3] = Players:WaitForChild(getPlayerName())
            }
            ReplicatedStorage:WaitForChild("RE"):WaitForChild("1Playe1rTrigge1rEven1t"):FireServer(unpack(args))
        end
    })
end

