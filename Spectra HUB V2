    Name = "Reset Player Stats",
    Callback = function()
        humanoid.WalkSpeed = 16
        humanoid.JumpPower = 50
        Workspace.Gravity = 196.2
    end
})



--// SPIN
PlayerTab:AddSection({ "Spin" })
local spinning, spinSpeed = false, 50

PlayerTab:AddToggle({
    Name = "Spin On/Off",
    Default = false,
    Callback = function(v) spinning = v end
})

PlayerTab:AddSlider({
    Name = "Spin Speed",
    Min = 1,
    Max = 1000,
    Default = spinSpeed,
    Callback = function(v) spinSpeed = v end
})

RunService.RenderStepped:Connect(function(dt)
    if spinning and humanoid and humanoid.RootPart then
        humanoid.RootPart.CFrame *= CFrame.Angles(0, math.rad(spinSpeed * dt), 0)
    end
end)

--// NOCLIP
local NoclipEnabled = false

PlayerTab:AddToggle({
    Name = "Noclip",
    Default = false,
    Callback = function(state)
        NoclipEnabled = state
    end
})

RunService.Stepped:Connect(function()
    if NoclipEnabled and plr.Character then
        for _, part in ipairs(plr.Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end)


--// INFINITE JUMP
local InfiniteJumpEnabled = false

PlayerTab:AddToggle({
    Name = "Infinite Jump",
    Default = false,
    Callback = function(state)
        InfiniteJumpEnabled = state
    end
})

game:GetService("UserInputService").JumpRequest:Connect(function()
    if InfiniteJumpEnabled and humanoid then
        humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
    end
end)


--// ESP NAME
PlayerTab:AddSection({ "ESP Name" })

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local ESPEnabled = false
local ESPSize = 14
local ESPColor = Color3.fromRGB(255,255,255)
local Rainbow = false
local ESPObjects = {}

local function createESP(player)
    if player.Character and player.Character:FindFirstChild("Head") and not ESPObjects[player] then
        local billboard = Instance.new("BillboardGui")
        billboard.Name = "ESP_Name"
        billboard.Adornee = player.Character.Head
        billboard.Size = UDim2.new(0,200,0,50)
        billboard.StudsOffset = Vector3.new(0,2,0)
        billboard.AlwaysOnTop = true

        local text = Instance.new("TextLabel", billboard)
        text.Size = UDim2.new(1,0,1,0)
        text.BackgroundTransparency = 1
        text.TextScaled = true
        text.Font = Enum.Font.GothamBold
        text.TextStrokeTransparency = 0

        local days = player.AccountAge
        text.Text = player.Name .. " | " .. days .. " dias"

        billboard.Parent = player.Character.Head
        ESPObjects[player] = text
    end
end

local function removeESP()
    for _, v in pairs(ESPObjects) do
        if v and v.Parent then
            v.Parent:Destroy()
        end
    end
    ESPObjects = {}
end

-- Toggle ESP
PlayerTab:AddToggle({
    Name = "ESP Nome (ON / OFF)",
    Default = false,
    Callback = function(v)
        ESPEnabled = v
        if not v then
            removeESP()
        end
    end
})

-- Slider Tamanho
PlayerTab:AddSlider({
    Name = "Tamanho do Nome",
    Min = 10,
    Max = 40,
    Default = ESPSize,
    Callback = function(v)
        ESPSize = v
    end
})

-- Toggle Rainbow RGB
PlayerTab:AddToggle({
    Name = "Rainbow RGB",
    Default = false,
    Callback = function(v)
        Rainbow = v
    end
})

-- Color Picker (se sua UI suportar)
PlayerTab:AddColorPicker({
    Name = "Cor do ESP",
    Default = ESPColor,
    Callback = function(c)
        ESPColor = c
    end
})

-- Atualiza√ß√£o constante
RunService.RenderStepped:Connect(function()
    if ESPEnabled then
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= Players.LocalPlayer then
                createESP(player)
                local text = ESPObjects[player]
                if text then
                    text.TextSize = ESPSize
                    if Rainbow then
                        local hue = (tick() % 5) / 5
                        text.TextColor3 = Color3.fromHSV(hue,1,1)
                    else
                        text.TextColor3 = ESPColor
                    end
                end
            end
        end
    end
end)

--// TROLL TAB
local TrollTab = Window:MakeTab({ Title = "Troll", Icon = "rbxassetid://84468243121641" })
TrollTab:AddSection({ "Troll Features" })

local selectedPlayer
local killing = false
local noclipKillEnabled = false

local function getPlayers()
    local t = {}
    for _, p in ipairs(Players:GetPlayers()) do
        if p ~= plr then table.insert(t, p.Name) end
    end
    return t
end

local playerDropdown = TrollTab:AddDropdown({
    Name = "Escolher Player",
    Options = {},
    Callback = function(v) selectedPlayer = v end
})

local function refreshDropdown()
    playerDropdown:Set(getPlayers())
end
refreshDropdown()

TrollTab:AddButton({ Name = "Atualizar Lista", Callback = refreshDropdown })

--// KILL EXTREMO (TELEPORTANDO EM TODAS AS POSI√á√ïES + NOCLIP FORTE + TOOL SOF√Å)
TrollTab:AddButton({
    Name = "Kill demorado e chato kkkk",
    Callback = function()
        if not selectedPlayer then return end
        killing = true
        noclipKillEnabled = true

        -- Pegar Tool (Sof√°)
        pcall(function()
            ReplicatedStorage.RE:FindFirstChild("1Too1l"):InvokeServer("PickingTools", "Couch")
        end)

        task.wait(0.05)

        -- Equipar o Tool Couch
        task.spawn(function()
            while killing do
                local bp = plr:FindFirstChildOfClass("Backpack")
                local tool = bp and bp:FindFirstChild("Couch")
                if tool and humanoid then
                    humanoid:EquipTool(tool)
                    break
                end
                task.wait(0.01)
            end
        end)

        -- Teleport brutal em TODAS as dire√ß√µes, sempre olhando para o alvo
        task.spawn(function()
            while killing do
                local target = Players:FindFirstChild(selectedPlayer)
                local hrp = plr.Character and plr.Character:FindFirstChild("HumanoidRootPart")
                local thrp = target and target.Character and target.Character:FindFirstChild("HumanoidRootPart")
                if hrp and thrp then
                    for _ = 1, 60 do
                        if not killing then break end
                        local dir = Vector3.new(
                            math.random(-10,10),
                            math.random(-10,10),
                            math.random(-10,10)
                        )
                        hrp.CFrame = CFrame.new(thrp.Position + dir, thrp.Position)
                    end
                end
                task.wait(0.001)
            end
        end)

        -- NoClip MUITO forte (atravessa tudo)
        task.spawn(function()
            while noclipKillEnabled do
                local char = plr.Character
                if char then
                    for _, p in ipairs(char:GetDescendants()) do
                        if p:IsA("BasePart") then
                            p.CanCollide = false
                        end
                    end
                end
                task.wait()
            end
        end)
    end
})

--// STOP KILL (DESATIVA TUDO)
TrollTab:AddButton({
    Name = "Stop Kill",
    Callback = function()
        killing = false
        noclipKillEnabled = false
        if plr.Character then
            for _, p in ipairs(plr.Character:GetDescendants()) do
                if p:IsA("BasePart") then
                    p.CanCollide = true
                end
            end
            workspace.CurrentCamera.CameraSubject = plr.Character:FindFirstChildOfClass("Humanoid")
        end
    end
})

TrollTab:AddButton({
    Name = "Teleportar para o Jogador",
    Callback = function()
        if not selectedPlayer then return end
        local target = Players:FindFirstChild(selectedPlayer)
        if target and target.Character and plr.Character then
            local hrp = plr.Character:FindFirstChild("HumanoidRootPart")
            local thrp = target.Character:FindFirstChild("HumanoidRootPart")
            if hrp and thrp then hrp.CFrame = thrp.CFrame end
        end
    end
})

TrollTab:AddButton({
    Name = "Skybox",
    Callback = function()
        loadstring(game:HttpGet("https://rawscripts.net/raw/Brookhaven-RP-Fe-Brookhaven-skybox-script-73292"))()
    end
})


--// VISUALIZAR JOGADOR SELECIONADO
local viewing = false

TrollTab:AddToggle({
    Name = "Visualizar Jogador",
    Default = false,
    Callback = function(state)
        viewing = state
        local target = Players:FindFirstChild(selectedPlayer)
        if state and target and target.Character then
            workspace.CurrentCamera.CameraSubject = target.Character:FindFirstChildOfClass("Humanoid")
            workspace.CurrentCamera.CameraType = Enum.CameraType.Custom
        elseif plr.Character then
            workspace.CurrentCamera.CameraSubject = plr.Character:FindFirstChildOfClass("Humanoid")
            workspace.CurrentCamera.CameraType = Enum.CameraType.Custom
        end
    end
})


