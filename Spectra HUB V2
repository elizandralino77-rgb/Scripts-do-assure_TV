----------------------------------------------------------
-- BOTÕES DE METEOROS
----------------------------------------------------------
-- Bola de Fogo
MapTab:AddButton({
    Name = "Bola ",
    Callback = function()
        spawn(function()
            local Players = game:GetService("Players")
            local Workspace = game:GetService("Workspace")
            local TweenService = game:GetService("TweenService")
            local Debris = game:GetService("Debris")

            local LocalPlayer = Players.LocalPlayer
            local PlayerChar = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

            local METEOR_SIZE = Vector3.new(25,25,25)
            local METEOR_COLOR = Color3.fromRGB(150,150,150)
            local TRAVEL_DURATION = 60
            local START_DISTANCE = 500
            local EXPLOSION_RADIUS = 100
            local EXPLOSION_DURATION = 10
            local MeteorPart

            local function createMeteor(startCFrame)
                local part = Instance.new("Part")
                part.Size = METEOR_SIZE
                part.Color = METEOR_COLOR
                part.Material = Enum.Material.Basalt
                part.Shape = Enum.PartType.Ball
                part.Anchored = true
                part.CanCollide = false
                part.CFrame = startCFrame
                part.Parent = Workspace
                return part
            end

            local function createExplosionEffect(position)
                local flashPart = Instance.new("Part")
                flashPart.Size = Vector3.new(EXPLOSION_RADIUS*2,EXPLOSION_RADIUS*2,EXPLOSION_RADIUS*2)
                flashPart.CFrame = CFrame.new(position)
                flashPart.Anchored = true
                flashPart.CanCollide = false
                flashPart.Transparency = 1
                flashPart.Parent = Workspace
                Debris:AddItem(flashPart, EXPLOSION_DURATION)
            end

            local function startMeteorEvent()
                local rootPart = PlayerChar:WaitForChild("HumanoidRootPart")
                local targetPosition = rootPart.Position
                local startCFrame = CFrame.new(targetPosition + Vector3.new(0, START_DISTANCE,0))
                MeteorPart = createMeteor(startCFrame)
                local tween = TweenService:Create(MeteorPart,TweenInfo.new(TRAVEL_DURATION,Enum.EasingStyle.Linear),{CFrame=CFrame.new(targetPosition)})
                tween:Play()
                tween.Completed:Once(function()
                    createExplosionEffect(targetPosition)
                    MeteorPart:Destroy()
                    MeteorPart=nil
                end)
            end

            startMeteorEvent()
        end)
    end
})

-- Bolas  KKK
MapTab:AddButton({
    Name = "Bolas KKK",
    Callback = function()
        spawn(function()
            local Players = game:GetService("Players")
            local Workspace = game:GetService("Workspace")
            local TweenService = game:GetService("TweenService")
            local RandomGen = Random.new()
            local PlayerChar = plr.Character or plr.CharacterAdded:Wait()

            local NUMBER_OF_METEORS = 80
            local DISPERSION_RADIUS = 300
            local METEOR_SIZE = Vector3.new(25,25,25)
            local METEOR_COLOR = Color3.fromRGB(80,80,80)
            local MIN_START_HEIGHT = 400
            local MAX_START_HEIGHT = 800
            local START_HORIZONTAL_SPREAD = 150
            local MIN_TRAVEL_DURATION = 40
            local MAX_TRAVEL_DURATION = 80

            local function createMeteor(startCFrame)
                local part = Instance.new("Part")
                part.Size = METEOR_SIZE
                part.Color = METEOR_COLOR
                part.Shape = Enum.PartType.Ball
                part.Anchored = true
                part.CanCollide = false
                part.CFrame = startCFrame
                part.Parent = Workspace
                return part
            end

            local function launchMeteor(startCFrame,targetPos,duration)
                local meteor = createMeteor(startCFrame)
                local tween = TweenService:Create(meteor,TweenInfo.new(duration,Enum.EasingStyle.Linear),{CFrame=CFrame.new(targetPos)})
                tween:Play()
                tween.Completed:Once(function()
                    meteor:Destroy()
                end)
            end

            local rootPart = PlayerChar:WaitForChild("HumanoidRootPart")
            local center = rootPart.Position
            for i=1,NUMBER_OF_METEORS do
                local angle = RandomGen:NextNumber()*2*math.pi
                local dist = RandomGen:NextNumber()*DISPERSION_RADIUS
                local target = center + Vector3.new(math.cos(angle)*dist,0,math.sin(angle)*dist)
                local height = RandomGen:NextNumber(MIN_START_HEIGHT,MAX_START_HEIGHT)
                local offsetX = RandomGen:NextNumber(-START_HORIZONTAL_SPREAD,START_HORIZONTAL_SPREAD)
                local offsetZ = RandomGen:NextNumber(-START_HORIZONTAL_SPREAD,START_HORIZONTAL_SPREAD)
                local startPos = target + Vector3.new(offsetX,height,offsetZ)
                launchMeteor(CFrame.new(startPos),target,RandomGen:NextNumber(MIN_TRAVEL_DURATION,MAX_TRAVEL_DURATION))
            end
        end)
    end
})
