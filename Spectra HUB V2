local skinColors = {
    "Pastel brown","Light orange","Dark nougat","Brown","Pine Cone","Dirt brown","Really black","Black",
    "Smoky grey","Dark stone grey","Medium stone grey","Fossil","Flint","Cloudy grey","Mid gray",
    "Institutional white","Mulberry","Eggplant","Bright violet","Magenta","Royal purple","Navy blue",
    "Dark blue","Really blue","Bright blue","Cyan","Pastel light blue","Toothpaste","Slime green",
    "Earth green","Parsley green","Forest green","Grime","Lime green","Artichoke","Mint",
    "Br. yellowish green","New Yeller","Olive","Deep orange","Br. yellowish orange","Fawn brown",
    "Burlap","Brick yellow","Beige","CGA brown","Rust","Cocoa","Maroon","Burgundy","Tawny",
    "Really red","Hot pink","Pink","Carnation pink","Sunrise","Salmon","Light reddish violet"
}

local remote = game:GetService("ReplicatedStorage").Remotes:FindFirstChild("ChangeBodyColor")

local skinRGBActive = false
local skinRGBReverseActive = false
local skinSpeed = 10

----------------------------------------------------------
-- SLIDER VELOCIDADE
----------------------------------------------------------
RGBTab:AddSlider({
    Name = "Velocidade RGB da Pele",
    Min = 1,
    Max = 50,
    Default = 10,
    Increment = 1,
    Callback = function(v)
        skinSpeed = v
    end
})

----------------------------------------------------------
-- FUN√á√ÉO DO RGB NORMAL
----------------------------------------------------------
local function startSkinRGB()
    task.spawn(function()
        while skinRGBActive do
            for _, colorName in ipairs(skinColors) do
                if not skinRGBActive then break end
                remote:FireServer(colorName)
                task.wait(1 / skinSpeed)
            end
        end
    end)
end

----------------------------------------------------------
-- FUN√á√ÉO DO RGB INVERTIDO
----------------------------------------------------------
local function startSkinRGBReverse()
    task.spawn(function()
        while skinRGBReverseActive do
            for i = #skinColors, 1, -1 do
                if not skinRGBReverseActive then break end
                remote:FireServer(skinColors[i])
                task.wait(1 / skinSpeed)
            end
        end
    end)
end

----------------------------------------------------------
-- TOGGLE RGB NORMAL
----------------------------------------------------------
RGBTab:AddToggle({
    Name = "RGB DA PELE (Normal) ON/OFF",
    Default = false,
    Callback = function(state)
        skinRGBActive = state
        if state then
            startSkinRGB()
        end
    end
})

----------------------------------------------------------
-- TOGGLE RGB INVERTIDO
----------------------------------------------------------
RGBTab:AddToggle({
    Name = "RGB DA PELE (Invertido) ON/OFF",
    Default = false,
    Callback = function(state)
        skinRGBReverseActive = state
        if state then
            startSkinRGBReverse()
        end
    end
})

